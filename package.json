{
  "name": "learn_the_mern_stack",
  "version": "1.0.0",
  "description": "MERN Stack app",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix",
    "node": "server.js",
    "server": "nodemon server.js",
